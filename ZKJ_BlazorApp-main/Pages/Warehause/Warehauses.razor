@page "/Warehauses"
@attribute [Authorize]
@inject IWarehauseService WarehauseService

<div class="card mt-4">
    <h4 class="card-header">Warehauses</h4>
    <div class="card-body">
        <h6>List of company warehauses</h6>
        @if (loading)
         {
            <div class="spinner-border spinner-border-sm"></div>
         }
        @if (warehauses != null)
        {
            <ul>
                @foreach (var warehause in warehauses)
                {
                    <li>Nazwa magazynu: <strong>@warehause.Name</strong> nr. pomieszczenia - @warehause.WarehauseNumber</li>
                    <ul>
                        @foreach (var item in warehause.HotelLinen)
                        {
                            <li>@item.NameWithShortDescription - @item.Amount szt.</li>
                        }
                    </ul>
                    
                }
            </ul>
        }
    </div>
</div>

@code {

    private bool loading;
    private IEnumerable<Models.Warehause> warehauses;
    
    protected override async Task OnInitializedAsync()
    {
        loading = true;
        warehauses = await WarehauseService.GetAll();
        loading = false;
    }
}