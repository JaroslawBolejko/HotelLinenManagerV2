@page "/addhotellinen"
@attribute [Authorize]
@inject IHotelLinenService HotelLinenService
@inject IWarehauseService WarehauseService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="hotelLinen">
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input for="Name" class="form-control" @bind-value="@hotelLinen.Description" />

                    <label for="Color" class="control-label">Color</label>
                    <input for="Color" class="form-control" @bind-value="@hotelLinen.Color" />

                    <label for="HotelLinenTypeId" class="control-label">Hotel Linen Type Id</label>
                    <input for="HotelLinenTypeId" class="form-control" @bind-value="@hotelLinen.HotelLinenTypeId" />

                    <label for="Amount" class="control-label">Base Amount</label>
                    <input for="Amount" class="form-control" @bind-value="@hotelLinen.Amount" />


                    <input type="hidden" @bind-value="@hotelLinen.Id" />

                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" @onclick="() => CreateHotelLinen()">Save</button>
                    <button type="button" class="btn btn-danger" @onclick="() => cancel()">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
@code{

    private Models.HotelLinen hotelLinen = new Models.HotelLinen();
    private IEnumerable<Warehause> warehauses;

    protected override async Task OnInitializedAsync()
    {
        warehauses = await WarehauseService.GetAll();
    }
    protected async Task CreateHotelLinen()
    {
        await HotelLinenService.Create(hotelLinen);
        navigationManager.NavigateTo("/hotellinens");
    }

    void cancel()
    {
        navigationManager.NavigateTo("/hotellinens");
    }
}