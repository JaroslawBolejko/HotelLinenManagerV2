@page "/Users"
@attribute [Authorize]
@inject IUserService UserService
@inject ICompanyService CompanyService
@*@inject ILocalStorageService LocalStorageService*@

<div class="card mt-4">
    <h4 class="card-header">Users</h4>
    <div class="card-body">
        <h6>Your personal data</h6>
        @if (loading)
        {
<div class="spinner-border spinner-border-sm"></div>}
        @if (user != null)
         {
            <ul>
                <li><b>First name and last name: </b> @user.FirstName @user.LastName</li>
                <li><b>Username:</b>@user.Username</li>
                <li><b>Email:   </b>@user.Email</li>
                <li><b>Role:    </b>@user.Permission</li>
                <li><b>Company: </b>@company.Name</li>
            </ul>
         }
    </div>
</div>

@code { private bool loading;
    private User user;
    private Company company;
 

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        user = await UserService.GetMe();
        //user = await LocalStorageService.GetItem<User>("user");
        company = await CompanyService.GetCompanyById(user.CompanyId);
        loading = false;
    } }